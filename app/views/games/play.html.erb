<div class="countdown">3</div>
<div data-controller="game" class="game-container" style="display: none;">
  <div class="game-header">
    <div class="timer-container">
      <div class="timer" data-game-target="timer">2:00</div>
      <div class="progress-bar">
        <div class="progress-fill" data-game-target="progressBar"></div>
      </div>
    </div>
    <div class="score">점수: <span data-game-target="score">0</span></div>
    <div class="audio-controls">
      <button id="toggleAudio" class="audio-button">🔊</button>
      <input type="range" id="volumeSlider" min="0" max="1" step="0.1" value="0.5" class="volume-slider">
    </div>
  </div>
  
  <div class="game-grid" data-game-target="grid">
    <!-- 게임 그리드는 JavaScript에서 동적으로 생성됩니다 -->
  </div>
  
  <audio id="bgMusic" loop>
    <source src="<%= asset_path('music.mp3') %>" type="audio/mpeg">
  </audio>
</div>

<% content_for :styles do %>
  <style>
    .game-container {
      max-width: 1020px; /* PC용 고정 너비 */
      margin: 0 auto;
      padding: 20px;
      box-sizing: border-box;
    }

    .game-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 20px;
      font-size: 24px;
      align-items: center;
    }
    
    .timer-container {
      display: flex;
      align-items: center;
      gap: 10px;
    }
    
    .timer {
      min-width: 70px;
      font-weight: bold;
      font-size: 18pxpx;
    }
    
    .progress-bar {
      width: 400px; /* PC용 기본 너비 */
      height: 12px;
      background: #f5f5f5;
      border-radius: 6px;
      overflow: hidden;
      border: 2px solid #ddd;
      box-sizing: border-box;
      position: relative;
    }
    
    .progress-fill {
      position: absolute;
      left: 0;
      top: 0;
      bottom: 0;
      width: 100%;
      background: #ff6f0f;
      border-radius: 4px;
      transition: width 0.3s linear;
    }
    
    .audio-controls {
      display: flex;
      align-items: center;
    }
    
    .audio-button {
      background: none;
      border: none;
      font-size: 24px;
      cursor: pointer;
      padding: 0 10px;
    }
    
    .volume-slider {
      width: 80px;
      margin-left: 5px;
    }

    .game-grid {
      display: grid;
      grid-template-columns: repeat(17, 1fr);
      gap: 4px;
      background-color: #eee;
      padding: 10px;
      border-radius: 8px;
      width: 100%;
      height: auto; /* 자동 높이 */
    }

    .cell {
      aspect-ratio: 1;
      width: 54px; /* 고정 너비 */
      height: 54px; /* 고정 높이 */
      background-color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 24px;
      font-weight: bold;
      cursor: pointer;
      user-select: none;
      border-radius: 4px;
      transition: background-color 0.2s ease, border 0.2s ease;
      box-sizing: border-box; /* 추가: 테두리가 크기에 포함되도록 설정 */
    }

    .cell.selected {
      background-color: rgba(255, 111, 15, 0.4); /* 투명한 주황색(당근 브랜드 컬러) */
      border: 2px solid #ff6f0f; /* 주황색 테두리 추가 */
    }

    .cell.removed {
      opacity: 0;
      transform: scale(1); /* 크기는 유지 */
      transition: opacity 0.3s ease;
    }

    .cell.removed.empty {
      background-color: #eee;
      cursor: pointer;
      opacity: 1;
    }

    .cell.removed.empty.selected {
      background-color: rgba(255, 111, 15, 0.4);
      border: 2px solid #ff6f0f;
      opacity: 1;
    }

    /* 당근 이미지가 있는 특별 셀 */
    .cell.special {
      position: relative;
      color: #333; /* 숫자를 보이게 함 */
      background-color: #fff; /* 배경색을 흰색으로 유지 */
      z-index: 2; /* 셀 텍스트의 z-index를 높임 */
    }
    
    .cell.special::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      width: 80%; /* 이미지 크기를 셀의 80%로 키움 */
      height: 80%; /* 이미지 크기를 셀의 80%로 키움 */
      background-image: url('<%= asset_path('daangn.png') %>');
      background-size: contain; /* 이미지 비율 유지하면서 맞춤 */
      background-position: center;
      background-repeat: no-repeat;
      opacity: 0.8; /* 이미지를 약간 투명하게 하여 숫자가 보이도록 함 */
      z-index: -1; /* 셀 내용(숫자) 아래에 위치하도록 함 */
    }
    
    .cell.special.selected {
      background-color: rgba(255, 111, 15, 0.4);
      border: 2px solid #ff6f0f;
      color: #333;
      font-weight: bolder; /* 선택 시 숫자를 더 굵게 표시 */
      text-shadow: 0 0 3px white; /* 숫자가 더 잘 보이도록 텍스트 그림자 추가 */
    }
    
    .cell.special.selected::before {
      opacity: 0.9;
      width: 85%; /* 선택 시 이미지 약간 더 크게 */
      height: 85%;
    }

    .cell.special.empty {
      background-image: none;
    }
    
    .cell.special.empty::before {
      display: none;
    }

    /* 특별 점수 효과 */
    .special-effect {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 36px;
      color: #ff6f0f;
      font-weight: bold;
      animation: float-up 1s ease-out;
      pointer-events: none;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.8);
    }
    
    @keyframes float-up {
      0% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
      }
      100% {
        opacity: 0;
        transform: translate(-50%, -80%) scale(1.5);
      }
    }

    /* 모바일 가로 화면용 스타일 */
    @media (max-width: 1024px) {
      .game-container {
        max-width: 680px;
        padding: 10px;
      }
      
      .game-header {
        font-size: 18px;
        margin-bottom: 10px;
      }
      
      .progress-bar {
        width: 200px; /* 모바일용 너비 */
      }
      
      .game-grid {
        gap: 2px;
        padding: 5px;
      }
      
      .cell {
        width: 36px;
        height: 36px;
        font-size: 18px;
        border-radius: 3px;
      }
    }

    /* 모바일 세로 화면용 스타일 (작은 화면) */
    @media (max-width: 700px) {
      .game-container {
        max-width: 490px;
        padding: 5px;
      }
      
      .game-header {
        font-size: 16px;
      }
      
      .cell {
        width: 26px;
        height: 26px;
        font-size: 14px;
        border-radius: 2px;
      }
    }

    /* 카운트다운 스타일 */
    .countdown {
      position: fixed;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      font-size: 120px;
      font-weight: bold;
      color: #ff6f0f;
      text-shadow: 0 0 20px rgba(255, 111, 15, 0.3);
      z-index: 1000;
      animation: pulse 1s infinite;
    }

    @keyframes pulse {
      0% { transform: translate(-50%, -50%) scale(1); }
      50% { transform: translate(-50%, -50%) scale(1.2); }
      100% { transform: translate(-50%, -50%) scale(1); }
    }
  </style>
<% end %>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const countdown = document.querySelector('.countdown');
    const gameContainer = document.querySelector('.game-container');
    
    function startCountdown() {
      let count = 3;
      countdown.textContent = count;
      
      const countInterval = setInterval(() => {
        count--;
        
        if (count === 0) {
          countdown.textContent = '시작!';
          setTimeout(() => {
            countdown.style.display = 'none';
            gameContainer.style.display = 'block';
          }, 1000);
          clearInterval(countInterval);
        } else if (count > 0) {
          countdown.textContent = count;
        }
      }, 1000);
    }
    
    startCountdown();
  });
</script>
